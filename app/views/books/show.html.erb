<p id="notice"><%= notice %></p>

<div class="container"> 
  <div class="row">  
    <%= render 'books/list', book: @books, user: @user %>
 
    <div class="col-xs-9">
      <h2>Book detail</h2>
      <table class="table">
        <tr>
          <td>
            <%= attachment_image_tag @book.user, :profile_image, size:"50", format: 'jpeg', fallback: "no_image.jpg" %><br>
            <%= link_to @user.name, user_path(@user.id) %>
          </td>
          <td>
            <%= link_to @book.title, book_path %> 
          </td>
          <td>
            <%= @book.body %>
          </td>

          <% if @user.id == current_user.id %>
            <td>
                <%= link_to "Edit", edit_book_path, class:"btn btn-success" %> 
            </td>
            <td>
              <%= link_to "Destroy", book_path, class:"btn btn-danger", method: :delete, "data-confirm" => "Are you sure?" %>
            <td>
          <% end %>
        </tr>
      </table>

      <%= form_with(model: [@book, @comment], local: true) do |f| %>
        <%= f.text_area :comment, rows:'5', class: "form-control",placeholder: "コメントをここに" %>
        <%= f.submit "Comment!", class: "btn btn-lg btn-base-1 mt-20 pull-right" %>
      <% end %>

      <h3>Comments</h3>
      <table>
        <tr>
          <td>
            <ol>
              <% @book.comments.each do |comment| %>
                <li class="comment">
                  <div class="comment-body bb">
                    <div class="comment-text">
                      <div class="comment-author clearfix">
                        <%= comment.user.name %>
                        <span class="comment-meta">
                          <span class="comment-date"><%= comment.created_at.strftime('%Y/%m/%d') %></span>
                        </span>
                      </div>
                      <div class="comment-entry"><%= comment.comment %></div>
                      <% if comment.user == current_user %>
                        <div>
                          <%= link_to "Destroy", book_comment_path(comment.book, comment), method: :delete, class: "btn btn-danger pull-right" %>
                        </div>
                      <% end %>
                    </div>
                  </div>
                </li>
              <% end %>
            </ol>
          </td>
        </tr>
      </table>
    </div>
  </div>
</div>