</p>

<div class="container">
  <h1>User info</h1>
    <% if @user.errors.any? %>
      <h3 class="error_message">error prohibited this book from being saved:</h3>
    <% end %>
  <%= form_for(@user) do |f| %>
    
    <div class="form-group has-icon">
      <%= f.label :name %>
      <%= f.text_field :name, autofocus: true, class:"form-control", id:"inputEmail", placeholder:"名前", :style=>"width:15%;"%>
      <span class="fa fa-user form-control-icon" aria-hidden="true"></span>
    </div>                      
    
    <div class="form-group has-icon">
      <%= f.label :image %>
      <%# <div class="user-edit-image">
        <%= attachment_image_tag @user, :profile_image, size:"60", fallback: "no_image.jpg" %>
      <%# </div>  %>
      <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
    </div>


    <div class="form-group has-icon">
      <%= f.label :introduction %>
      <%= f.text_area :introduction, autofocus: true, class:"form-control", id:"inputEmail", placeholder:"自己紹介文", :style=>"width:15%;" %>
      <span class="fa fa-user form-control-icon" aria-hidden="true"></span>
    </div>                      
    
    <%= f.submit "Update User" %>
  <% end %>
</div>