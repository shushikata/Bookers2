<p class="notice">
 <%= notice %> 
</p>

<div class="container"> 
  <div class="row">  
    <%= render 'books/list', book: @book, user: @user %>

    <div class="col-xs-9">
      <h1>Books</h1>
      <table class="table">
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
          <tr>
            <% @books.each do |book| %>
              <tr>
                <td>
                  <%= link_to user_path(book.user), :style=>"color:#9d9d9d;" do %>
                    <%= attachment_image_tag @user, :profile_image, size:"50", format: 'jpeg', fallback: "no_image.jpg" %>
                  <% end %>
                </td>
                <td>
                  <%= link_to book.title, book_path(book.id) %>
                </td>
                <td>
                  <%= book.body %>
                </td>
              </tr>
            <% end %>
          </tr>
        </table>
      </table>
    </div>
  </div>   
</div>   


 <h2>Your MAP</h2>

<script type="text/javascript">
  function initMap() {
    var test ={lat: <%= @user.latitude %>, lng: <%= @user.longitude %>};
    var map = new google.maps.Map(document.getElementById('map'), {
              zoom: 15, 
              center: test
              });
    var transitLayer = new google.maps.TransitLayer();
    transitLayer.setMap(map);

    var contentString = '住所：<%= @user.fruit_address %>';
    var infowindow = new google.maps.InfoWindow({
      content: contentString
    });

 #Map上の指定した位置にピンを挿して表示する
    var marker = new google.maps.Marker({
                  position:test,
                  map: map,
                  title: contentString
                 });

     marker.addListener('click', function() {
       infowindow.open(map, marker);
     });
  }
</script>

<script async defer
              src="https://maps.googleapis.com/maps/api/js?v=3.exp&key=AIzaSyBr9vNh7bo4Ku1aVURLVxNDC7acbR1gQPM&callback=initMap">
</script>

<style type="text/css">
  #map { height: 600px;
         width: 600px;}
</style>

<div id="map"><%= @map %></div>