<div class="container"> 
  <div class="row">  
    <%= render 'books/list', book: @book, user: @user %>

    <div class="col-xs-9">
      <h1>Users</h1>
      <table class="table">
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
            <th></th>
          </tr>
          <tr>
            <% @users.each do |user| %>
              <tr>
                <td>
                  <%= attachment_image_tag user, :profile_image, size: "50", format: 'jpeg', fallback: "no_image.jpg" %> 
                </td>
                <td>
                  <%= user.name %>
                </td>
                <td>
                  <% if current_user != user %>
                    <% if user.followed_by?(current_user) %>
                        <p><%=link_to "フォロー", user_relationships_path(user.id), method: :delete, class:"btn btn-primary" %></p>
                    <% else %>
                        <p><%=link_to "フォロー", user_relationships_path(user.id), method: :post, class:"btn btn-default" %></p>
                    <% end %>
                  <% end %>
                </td>
                <td>
                  <%= link_to "Show", user_path(user.id) %>
                </td>
              </tr>
            <% end %>
          </tr>
      </table>
    </div>
  </div>
</div>